class Circle:
    def __init__(self, radius):
        self.radius = radius

    def calc_diameter(self):
        pi = 3.141828
        diameter = 2 * self.radius * pi
        return diameter

    def calc_area(self):
        pi = 3.141828
        area = pi * self.radius**2
        return area

    def __str__(self):
        return f'Radius: {self.radius} Diemeter: {self.calc_diameter()}  Area: {self.calc_area()}'


circle = Circle(6)

print(str(circle))

